<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="12dp">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp">
        <ImageView
            android:id="@+id/document_image_view"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/document_information_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/document_title_text_view"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_width="216dp"
            android:layout_height="20dp">
        </TextView>

        <LinearLayout
            android:id="@+id/document_extra_information_layout"
            android:orientation="horizontal"
            android:layout_width="216dp"
            android:layout_height="16dp">
            <TextView
                android:id="@+id/document_file_type_text_view"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/document_size_text_view"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/document_date_text_view"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/document_extra_extra_information_layout"
            android:orientation="horizontal"
            android:layout_width="215dp"
            android:layout_height="16dp">
            <ImageView
                android:id="@+id/bage_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:id="@+id/document_about_information_inside_text_view"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/document_settings_image_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_settings"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:layout_marginTop="19dp"
        android:layout_marginRight="12dp">
    </ImageView>
</LinearLayout>